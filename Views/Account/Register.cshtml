@model PostsBoard.Models.User

<div class="text text-center text-secondary">
<h2>Sign-up</h2>
</div>
<div class="col-7 m-auto">
    <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
        <div class="form-group">
            <label for="username" class="col-form-label text-secondary">User ID</label>
            <input name="username" type="email" asp-for="UserName" placeholder="example@gmail.com" class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label for="fullname" class="col-form-label text-secondary">User Name</label>
            <input name="fullname" type="text" asp-for="FullName" placeholder="Full Name" class="form-control" />
            <span class="text-danger" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label for="password" class="col-form-label text-secondary">Password</label>
            <input name="password" type="password" asp-for="Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Create</button>
            <a class="btn btn-secondary" href="#">Cancel</a>
        </div>
    </form>

</div>